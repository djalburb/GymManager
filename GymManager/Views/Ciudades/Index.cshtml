@model IEnumerable<GymManager.Models.Ciudades>

@{
    ViewData["Title"] = "Ciudades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12"> 
        <div class="card">
            <div class="card-header">
                <h1>Ciudades</h1>
            </div>
            <div class="card-body">
                <p>
                    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Opciones
                                            </button>
                                            <div class="dropdown-menu">
                                                <a asp-action="Edit" asp-route-id="@item.IdCiudad" class="dropdown-item"><i class="fas fa-edit"></i> Editar</a> |
                                                <a asp-action="Details" asp-route-id="@item.IdCiudad" class="dropdown-item"><i class="fas fa-info-circle"></i> Detalles</a> |
                                                <a asp-action="Delete" asp-route-id="@item.IdCiudad" class="dropdown-item"><i class="fas fa-trash-alt"></i> Eliminar</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>