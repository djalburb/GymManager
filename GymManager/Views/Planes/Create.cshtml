@model GymManager.Models.Planes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex">
                    <h4>Nuevo Plan</h4>
                    <div class="ml-auto">
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Descripcion1" class="control-label"></label>
                                <input asp-for="Descripcion1" class="form-control" />
                                <span asp-validation-for="Descripcion1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Descripcion2" class="control-label"></label>
                                <input asp-for="Descripcion2" class="form-control" />
                                <span asp-validation-for="Descripcion2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="CodigoAlterno" class="control-label"></label>
                                <input asp-for="CodigoAlterno" class="form-control" />
                                <span asp-validation-for="CodigoAlterno" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="DuracionDias" class="control-label"></label>
                                <input asp-for="DuracionDias" class="form-control" />
                                <span asp-validation-for="DuracionDias" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Precio" class="control-label"></label>
                                <input asp-for="Precio" class="form-control money" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Descuento" class="control-label"></label>
                                <input asp-for="Descuento" class="form-control decimal" />
                                <span asp-validation-for="Descuento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
