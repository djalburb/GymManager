@model GymManager.Models.Moneda

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ingresar una nueva moneda</h1>

<hr />
<div class="row" bg-info >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Simbolo" class="control-label"></label>
                <input asp-for="Simbolo" class="form-control" />
                <span asp-validation-for="Simbolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear nueva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
