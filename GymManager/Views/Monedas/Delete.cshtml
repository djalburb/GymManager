@model GymManager.Models.Moneda

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h4>¿Está seguro(a) que desea eliminar este registro?</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(model => model.Nombre):</strong> @Html.DisplayFor(model => model.Nombre)
                    </li>
                    <li class="list-group-item">
                        <strong>@Html.DisplayNameFor(model => model.Simbolo):</strong> @Html.DisplayFor(model => model.Simbolo)
                    </li>
                </ul>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdMoneda" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>