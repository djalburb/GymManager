@model GymManager.Models.MetodosPagos

@{
    ViewData["Title"] = "Eliminar Metodo Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3>Eliminar Ciudad</h3>
            </div>
            <div class="card-body">
                <h4>¿Está seguro(a) que desea eliminar este registro?</h4>
                <ul class="list-group">
                    <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Nombre): </strong>@Html.DisplayFor(model => model.Nombre)</li>
                </ul>
                <br />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdMetodoPago" />
                    <div class="form-group">
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
